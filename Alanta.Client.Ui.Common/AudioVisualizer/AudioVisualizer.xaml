						<TextBlock.Foreground>
							<SolidColorBrush Color="{StaticResource labelColour}"/>
						</TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="4000" TextWrapping="Wrap" FontSize="8" Height="39" Padding="0,28,0,0" TextAlignment="Right">
