						<TextBlock.Foreground>
							<SolidColorBrush Color="{StaticResource labelColour}"/>
						</TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </Canvas>
        </Border>

    </Grid>
</UserControl>
